<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Slider #1"
        android:tag="x_slider_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/control_label"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_row="0"
        app:layout_gravity="center_horizontal"/>

    <SeekBar
        android:text="Slider #1"
        android:tag="x_slider_1"
        android:max="200"
        android:indeterminate="false"
        android:progress="60"
        app:layout_column="0"
        app:layout_row="1"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"/>


    <TextView
        android:text="Slider #2"
        android:tag="x_slider_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/control_label"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_row="2"
        app:layout_gravity="center_horizontal"/>

    <SeekBar
        android:text="Slider #2"
        android:tag="x_slider_2"
        android:max="200"
        android:indeterminate="false"
        android:progress="60"
        app:layout_column="0"
        app:layout_row="3"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"/>


    <TextView
        android:text="Slider #3"
        android:tag="x_slider_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/control_label"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_row="4"
        app:layout_gravity="center_horizontal"/>

    <SeekBar
        android:text="Slider #3"
        android:tag="x_slider_3"
        android:max="200"
        android:indeterminate="false"
        android:progress="60"
        app:layout_column="0"
        app:layout_row="5"
        app:layout_columnSpan="2"
        app:layout_gravity="fill_horizontal"/>

</merge>