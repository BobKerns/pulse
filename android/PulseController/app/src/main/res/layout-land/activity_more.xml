<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/nandesuka"
    android:background="@drawable/heart_image_fx">
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="0sp"
        android:padding="0sp"
        app:columnCount="2"
        app:rowCount="2"
        app:useDefaultMargins="false" >
    <android.support.v7.widget.GridLayout
        android:layout_alignParentTop="true"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="0"
        app:layout_column="0"
        app:columnCount="3"
        app:rowCount="3"
        app:useDefaultMargins="true"
        android:background="@drawable/border" >

        <Button
            android:text="Spare #1a"
            android:tag="x_button_1a"
            android:textStyle="bold"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #1b"
            android:tag="x_button_1b"
            android:textStyle="bold"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #1c"
            android:tag="x_button_1c"
            android:textStyle="bold"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #2a"
            android:tag="x_button_2a"
            android:textStyle="bold"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #2b"
            android:tag="x_button_2b"
            android:textStyle="bold"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #2c"
            android:tag="x_button_2c"
            android:textStyle="bold"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #3a"
            android:tag="x_button_3a"
            android:textStyle="bold"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #3b"
            android:tag="x_button_3b"
            android:textStyle="bold"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>

        <Button
            android:text="Spare #3c"
            android:tag="x_button_3c"
            android:textStyle="bold"
            app:layout_row="2"
            app:layout_column="2"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"/>
    </android.support.v7.widget.GridLayout>


        <android.support.v7.widget.GridLayout
            android:layout_alignParentTop="true"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_column="0"
            app:columnCount="2"
            app:rowCount="8"
            app:useDefaultMargins="true"
            android:background="@drawable/border" >
            <TextView
                android:text="Slider #1"
                android:tag="x_slider_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/control_label"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="0"
                app:layout_gravity="center_horizontal"/>

            <SeekBar
                android:text="Slider #1"
                android:tag="x_slider_1"
                android:max="200"
                android:indeterminate="false"
                android:progress="60"
                app:layout_column="0"
                app:layout_row="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>


            <TextView
                android:text="Slider #2"
                android:tag="x_slider_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/control_label"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="2"
                app:layout_gravity="center_horizontal"/>

            <SeekBar
                android:text="Slider #2"
                android:tag="x_slider_2"
                android:max="200"
                android:indeterminate="false"
                android:progress="60"
                app:layout_column="0"
                app:layout_row="3"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>


            <TextView
                android:text="Slider #3"
                android:tag="x_slider_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/control_label"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_row="4"
                app:layout_gravity="center_horizontal"/>

            <SeekBar
                android:text="Slider #3"
                android:tag="x_slider_3"
                android:max="200"
                android:indeterminate="false"
                android:progress="60"
                app:layout_column="0"
                app:layout_row="5"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"/>

        </android.support.v7.widget.GridLayout>

        <android.support.v7.widget.GridLayout
            android:layout_alignParentTop="true"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1"
            app:layout_column="1"
            app:columnCount="3"
            app:rowCount="4"
            app:useDefaultMargins="true"
            android:background="@drawable/border" >

        </android.support.v7.widget.GridLayout>


    <android.support.v7.widget.GridLayout
        android:layout_alignParentTop="true"
        app:layout_gravity="fill_horizontal"
        app:layout_columnWeight="1"
        app:layout_column="1"
        app:layout_row="0"
        app:columnCount="2"
        app:rowCount="3"
        app:useDefaultMargins="true"
        android:background="@drawable/border" >

    </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.GridLayout>
    <include layout="@layout/status_bar"/>
</RelativeLayout>
