<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/nandesuka"
    android:background="@drawable/heart_image_fx">

    <TextView android:text="@string/title_slider1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="@dimen/control_label" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slider1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="127"
        android:indeterminate="false"
        android:progress="0"
        android:layout_below="@+id/textView"
        android:tag="@string/slider_1_tag" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_1"
        android:id="@+id/button_1"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/slider1"
        android:layout_alignParentStart="true"
        android:tag="@string/button_1_tag"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_2"
        android:id="@+id/button_2"
        android:layout_alignBaseline="@+id/button_1"
        android:layout_alignBottom="@+id/button_1"
        android:layout_centerHorizontal="true"
        android:tag="@string/button_2_tag"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_3"
        android:id="@+id/button_3"
        android:layout_alignBaseline="@+id/button_2"
        android:layout_alignBottom="@+id/button_2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:tag="@string/button_3_tag"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_1"
        android:layout_marginTop="45dp"
        android:id="@+id/spinner_1"
        android:entries="@array/spinner_1_entries"
        android:background="@android:drawable/btn_dropdown"
        android:popupBackground="@android:drawable/btn_default_small"
        android:tag="@string/spinner_1_tag"
        style="@android:style/Widget.Spinner.DropDown" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorStatus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textView_status"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/textView_connect"
            android:layout_toStartOf="@+id/pulse_icon_3" />

        <ImageView
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/pulse_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/pulse_icon_1"
            android:contentDescription="@string/heartbeat_1" />

        <ImageView
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/pulse_icon"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/pulse_icon_1"
            android:id="@+id/pulse_icon_2"
            android:contentDescription="@string/heartbeat_2" />

        <ImageView
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/pulse_icon"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/pulse_icon_2"
            android:id="@+id/pulse_icon_3"
            android:contentDescription="@string/heartbeat_3" />
    </RelativeLayout>
</RelativeLayout>
