<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp">
    <com.medeagames.myapplication.SingleColorView
        android:layout_width="@dimen/onOff_cell_width"
        android:layout_height="@dimen/onOff_cell_height"
        app:default_cell_color="@color/offColor"
        />
    <com.medeagames.myapplication.SingleColorView
        android:layout_width="@dimen/onOff_cell_width"
        android:layout_height="@dimen/onOff_cell_height"
        app:default_cell_color="@color/offColor"
    />

    <com.medeagames.myapplication.SingleColorView
        android:layout_width="@dimen/onOff_cell_width"
        android:layout_height="@dimen/onOff_cell_height"
        app:default_cell_color="@color/offColor"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert_row"
        android:textSize="10sp"
        android:minHeight="@dimen/onOff_cell_height"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/btn_add"
        android:onClick="addRow"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_row"
        android:textSize="10sp"
        android:layout_margin="0dp"
        android:minHeight="@dimen/onOff_cell_height"
        android:padding="0dp"
        android:id="@+id/btn_delete"
        android:onClick="deleteRow"/>
</LinearLayout>